<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/amber_50"
    android:gravity="center_horizontal"
    android:id="@+id/rootLayout"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/amber_500"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To To !"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:id="@+id/authTv"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="24dp"
            android:background="#00ff0000"
            android:id="@+id/btnLogin" />
    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/toto_foot"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Do you know what sound PeeP makes
        when it moves?"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="It's ToTo!"
        android:textSize="40dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/addFab0"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_corner"
        android:text="To do" />

    <Button
        android:id="@+id/addFab1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_corner"
        android:text="weather"/>

    <Button
        android:id="@+id/addFab2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:layout_marginBottom="30dp"
        android:text="diary"/>

    <Button
        android:id="@+id/setup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_slim"
        android:text="Settings"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Want to Call PeeP?"
        android:textSize="20dp"
        android:gravity="center"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:id="@+id/callBtn"
        android:src="@drawable/totologo"
        android:scaleType="fitCenter"
        android:background="#00FF0000"
        android:layout_marginBottom="10dp"/>


</LinearLayout>