<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToTo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorPrimaryDark">@color/yellow_800</item>
        <item name="colorAccent">@color/amber_900</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/brown_600</item>
        <item name="android:fontFamily">@font/bazzi</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20dp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash
        </item>
    </style>
</resources>